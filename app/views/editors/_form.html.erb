<%= form_for @editor, :html => { :class => "form-horizontal editor" } do |f| %>

  <% if @editor.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@editor.errors.count, "error") %> prohibited this editor from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @editor.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label :cnpj, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :cnpj, :class => 'form-control' %>
    </div>
    <%=f.error_span(:cnpj) %>
  </div>

  <div class="col-lg-12">
    <h4 align="center">Address</h4>
  </div>
  <%= render partial: 'addresses/address_partial', locals: {f:f}%>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                editors_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
